<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main"
    tools:context="com.restrepo.ricardo.login.MainActivityFragment"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/navajowhite"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/principal">

        <TextView
            android:text="@string/signed_out"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataStatus"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:id="@+id/lUser"
            android:visibility="visible">

            <TextView
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:text="Usuario:"
                android:id="@+id/tUser"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/eUser"
                android:hint="name" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:id="@+id/lPassword"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ContraseÃ±a:"
                android:id="@+id/tPassword"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ePassword"
                android:hint="password" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conectar"
            android:id="@+id/bConectar" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desconectar"
                android:id="@+id/bDesconectar"
                android:visibility="gone"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:id="@+id/bRegistro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/share"
                android:text="share"
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:layout_gravity="center"/>


        </LinearLayout>
        <com.google.android.gms.common.SignInButton android:id="@+id/id_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:visibility="gone"
            android:layout_gravity="center"/>

        <Button android:id="@+id/id_sign_out_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="14sp"
            android:text="@string/btnSignout"
            android:textColor="@color/darkslategray"
            android:background="@color/white"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_gravity="center"/>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/contendorFormulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>